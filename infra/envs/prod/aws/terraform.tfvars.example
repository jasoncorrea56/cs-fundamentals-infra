# Example config for infra/envs/prod/aws
# Copy this file to terraform.tfvars and customize for your account.

environment = "prod"
region      = "us-west-2"

# App basics
app_name        = "cs-fundamentals"
app_namespace   = "csf"
service_account = "csf-app"

# Demo db URL â€“ replace with a real connection string or leave empty if not used
db_url = "postgresql://user:pass@host:5432/dbname"

# EKS version (keep aligned with AWS supported versions)
kubernetes_version = "1.34"

# Runtime alerts (CloudWatch + SNS)
runtime_alert_email   = ""  # i.e. "you@example.com"
enable_runtime_alerts = false

# CIDRs allowed to reach the public ALB for this env
# For real usage, lock this down to your IP/VPN instead of 0.0.0.0/0
alb_allowed_cidrs = [
  "0.0.0.0/0",
]
